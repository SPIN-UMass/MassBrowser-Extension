{
	"compileOnSave": true,
	"compilerOptions": {
		"typeRoots": [ "node_modules/@types", "node_modules/web-ext-types" ],
		"outDir": "build-ts",
		"noImplicitAny": false,
		"noEmitOnError": true,
		"removeComments": false,
		"sourceMap": true,
		"target": "es6",
		"module": "es6",
		"lib": [ "es6", "dom" ],
		"strictNullChecks": false,
		"noUnusedLocals": false
	},
	"exclude": [
		"node_modules",
		"wwwroot"
	]
}